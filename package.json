{
  "name": "tactical-ascii-roguelike",
  "version": "1.0.0",
  "description": "Real-time tactical ASCII roguelike with refined AP system",
  "main": "dist/server/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server/server.ts",
    "build": "tsc",
    "start": "node dist/server/server.js",
    "test": "jest",
    "test:unit": "jest src/server/__tests__/*.test.ts --testTimeout=30000",
    "test:integration": "jest src/server/__tests__/integration/*.test.ts --testTimeout=60000",
    "test:performance": "jest src/server/__tests__/performance/*.test.ts --testTimeout=120000",
    "test:coverage": "jest --coverage --coverageReporters=text-lcov --coverageReporters=html",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false --testTimeout=60000",
    "test:comprehensive": "ts-node src/server/__tests__/testRunner.ts",
    "test:ap-system": "jest src/server/__tests__/APSystem.test.ts --verbose",
    "test:turn-manager": "jest src/server/__tests__/TurnManager.test.ts --verbose",
    "test:free-actions": "jest src/server/__tests__/FreeActions.test.ts --verbose",
    "test:load": "jest src/server/__tests__/performance/LoadTesting.test.ts --testTimeout=120000",
    "test:metrics": "jest src/server/__tests__/performance/MetricsAndLatency.test.ts --testTimeout=90000",
    "test:visual": "node dev-tools/testing/tests/visual/visual-regression-runner.js",
    "test:visual:setup": "node dev-tools/testing/tests/visual/visual-regression-runner.js setup",
    "test:visual:playwright": "npx playwright test dev-tools/testing/tests/visual/ap-system-visual.spec.ts --config=dev-tools/testing/playwright.config.ts",
    "test:visual:update": "npx playwright test --update-snapshots --config=dev-tools/testing/playwright.config.ts",
    "test:visual:report": "npx playwright show-report dev-tools/testing/test-results/visual-tests/html-report",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "roguelike",
    "ascii",
    "tactical",
    "multiplayer",
    "ap-system"
  ],
  "author": "Development Team",
  "license": "MIT",
  "dependencies": {
    "@hathora/server-sdk": "^1.0.0",
    "dotenv": "^16.3.1",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@types/uuid": "^9.0.6",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
