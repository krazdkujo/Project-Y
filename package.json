{
  "name": "tactical-ascii-roguelike",
  "version": "1.0.0",
  "description": "Real-time tactical ASCII roguelike with refined AP system",
  "main": "dist/server/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server/server.ts",
    "build": "tsc",
    "start": "node dist/server/server.js",
    "test": "jest",
    "test:unit": "jest src/server/__tests__/*.test.ts --testTimeout=30000",
    "test:integration": "jest src/server/__tests__/integration/*.test.ts --testTimeout=60000",
    "test:performance": "jest src/server/__tests__/performance/*.test.ts --testTimeout=120000",
    "test:coverage": "jest --coverage --coverageReporters=text-lcov --coverageReporters=html",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false --testTimeout=60000",
    "test:comprehensive": "ts-node src/server/__tests__/testRunner.ts",
    "test:ap-system": "jest src/server/__tests__/APSystem.test.ts --verbose",
    "test:turn-manager": "jest src/server/__tests__/TurnManager.test.ts --verbose",
    "test:free-actions": "jest src/server/__tests__/FreeActions.test.ts --verbose",
    "test:load": "jest src/server/__tests__/performance/LoadTesting.test.ts --testTimeout=120000",
    "test:metrics": "jest src/server/__tests__/performance/MetricsAndLatency.test.ts --testTimeout=90000",
    "test:visual": "npx playwright test tests/visual-regression.spec.ts tests/quick-skill-bar-visual.spec.ts tests/ascii-character-validation.spec.ts tests/color-scheme-validation.spec.ts",
    "test:visual:all": "npx playwright test tests/visual-regression.spec.ts tests/quick-skill-bar-visual.spec.ts tests/ascii-character-validation.spec.ts tests/color-scheme-validation.spec.ts --reporter=html",
    "test:visual:critical": "npx playwright test tests/quick-skill-bar-visual.spec.ts --reporter=list",
    "test:visual:baseline": "npx playwright test tests/generate-baselines.spec.ts --reporter=list",
    "test:visual:update": "npx playwright test tests/visual-regression.spec.ts --update-snapshots",
    "test:visual:report": "npx playwright show-report",
    "test:visual:quick": "npx playwright test tests/quick-skill-bar-visual.spec.ts --headed --reporter=list",
    "test:visual:chrome": "npx playwright test tests/visual-regression.spec.ts --project=chromium --reporter=list",
    "test:visual:firefox": "npx playwright test tests/visual-regression.spec.ts --project=firefox --reporter=list",
    "test:visual:safari": "npx playwright test tests/visual-regression.spec.ts --project=webkit --reporter=list",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "migrate": "ts-node src/lib/database/migrations/cli.ts migrate",
    "migrate:status": "ts-node src/lib/database/migrations/cli.ts status",
    "migrate:rollback": "ts-node src/lib/database/migrations/cli.ts rollback",
    "migrate:create": "ts-node src/lib/database/migrations/cli.ts create",
    "migrate:validate": "ts-node src/lib/database/migrations/cli.ts validate",
    "migrate:dry-run": "ts-node src/lib/database/migrations/cli.ts migrate --dry-run",
    "migrate:production": "node scripts/migration-runner.js",
    "migrate:deploy": "bash scripts/deploy-migrations.sh"
  },
  "keywords": [
    "roguelike",
    "ascii",
    "tactical",
    "multiplayer",
    "ap-system"
  ],
  "author": "Development Team",
  "license": "MIT",
  "dependencies": {
    "@hathora/server-sdk": "^1.0.0",
    "@supabase/supabase-js": "^2.56.0",
    "dotenv": "^16.3.1",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^9.0.6",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "commander": "^14.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "node-pg-migrate": "^8.0.3",
    "pg": "^8.16.3",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
